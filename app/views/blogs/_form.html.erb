<% if @blog.errors.any? %>
  <ul>
  	<h2>This is the list of errors.</h2>
  	<% @blog.errors.full_messages.each do |msg| %>
   	<li> <%=msg%> </ul>
   	<% end %>
  </ul>
  <% end %>




<%= form_for @blog do |f| %>
  <p>
	<%= f.label  :title %><br/>
	<%= f.text_field :title %>
 </p>
 <p>
 	<%= f.label :description %> <br/>
 	<%= f.text_area :description %>
 </p>
 <p>
 	<%= f.submit %>
 </p>
 <% end %>